<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#676098"
    android:backgroundTint="#676098"
    tools:context=".Menu">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:backgroundTint="@color/white"
        android:background="@color/white"
        android:id="@+id/cardbg"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="5dp"
        android:layout_margin="20dp"
        android:id="@+id/back"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Delivery"
        android:fontFamily="@font/chalkboard"
        android:textSize="30sp"
        android:textColor="#676098"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:id="@+id/title"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/barr"
        >

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Pasta"
            android:textColor="@color/white"
            android:id="@+id/pasta"
            android:alpha="0.7"
            android:gravity="center"
            android:background="@drawable/rounded"
            android:layout_weight="0.25"
            android:fontFamily="@font/sfr"
            android:layout_gravity="center"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="Burger"
            android:gravity="center"
            android:id="@+id/burger"
            android:alpha="0.4"
            android:textColor="@color/black"
            android:layout_weight="0.25"
            android:fontFamily="@font/sfr"
            android:layout_gravity="center"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="Pizza"
            android:gravity="center"
            android:id="@+id/pizaa"
            android:alpha="0.4"
            android:textColor="@color/black"
            android:layout_weight="0.25"
            android:fontFamily="@font/sfr"
            android:layout_gravity="center"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="Drink's"
            android:gravity="center"
            android:alpha="0.4"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:id="@+id/drink"
            android:layout_weight="0.25"
            android:fontFamily="@font/sfr"
            android:textSize="16sp"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="700dp"
        app:layout_constraintTop_toBottomOf="@id/barr"
        android:background="@color/white"
        android:layout_marginTop="30dp"
        android:id="@+id/fodddd"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="50dp">

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="44 types of pasta"
        android:textColor="#676098"
        android:alpha="0.7"
        app:layout_constraintTop_toTopOf="@id/fodddd"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/sfr"
        android:elevation="5dp"
        android:textSize="14sp"
        android:id="@+id/types"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/fodddd"
        android:background="@color/white"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="40dp"
        android:id="@+id/ico"
        app:cardCornerRadius="30dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/icco"
            android:src="@drawable/chef"
            android:alpha="0.7"
            android:layout_gravity="center"
            />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/types"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="2dp"
        android:layout_marginTop="30dp"
        >


        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="30dp"
            android:layout_marginLeft="40dp"
            android:elevation="2dp"
            android:id="@+id/fc1">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:id="@+id/s1"
                android:src="@drawable/f1"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="30dp"
            android:layout_marginLeft="40dp"
            android:elevation="2dp"
            android:layout_marginTop="30dp"
            android:id="@+id/fc2">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:src="@drawable/f2"
                android:id="@+id/demoPic"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="30dp"
            android:layout_marginLeft="40dp"
            android:elevation="2dp"
            android:layout_marginTop="30dp"
            android:id="@+id/fc3">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:id="@+id/s3"
                android:src="@drawable/f3"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="30dp"
            android:layout_marginLeft="40dp"
            android:elevation="2dp"
            android:layout_marginTop="30dp"
            android:id="@+id/fc4">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:src="@drawable/f4"
                />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/types"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="2dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fettuccuine Arrabbiata"
            android:fontFamily="@font/chalkboard"
            android:textColor="#676098"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomato-based"
            android:fontFamily="@font/chalkboard"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:alpha="0.3"/>

        <TextView
            android:layout_marginTop="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capricciosa"
            android:fontFamily="@font/chalkboard"
            android:textColor="#676098"
            android:id="@+id/demoTitle"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oven-roasted chicken"
            android:fontFamily="@font/chalkboard"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:id="@+id/demoDesc"
            android:alpha="0.3"/>

        <TextView
            android:layout_marginTop="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ricotta Ravioli"
            android:fontFamily="@font/chalkboard"
            android:textColor="#676098"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crispy bacon, ham"
            android:fontFamily="@font/chalkboard"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:alpha="0.3"/>

        <TextView
            android:layout_marginTop="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spaghetti Bolognese"
            android:fontFamily="@font/chalkboard"
            android:textColor="#676098"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Traditional Beef"
            android:fontFamily="@font/chalkboard"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:alpha="0.3"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 11.99"
        android:fontFamily="@font/chalkboard"
        app:layout_constraintTop_toBottomOf="@id/types"
        android:textColor="#676098"
        android:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp"
        android:textStyle="bold"
        android:alpha="0.7"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 15.70"
        android:fontFamily="@font/chalkboard"
        app:layout_constraintTop_toBottomOf="@id/types"
        android:textColor="#676098"
        android:elevation="3dp"
        android:id="@+id/demoPrice"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="195dp"
        android:textStyle="bold"
        android:alpha="0.7"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 17.80"
        android:fontFamily="@font/chalkboard"
        app:layout_constraintTop_toBottomOf="@id/types"
        android:textColor="#676098"
        android:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="320dp"
        android:textStyle="bold"
        android:alpha="0.7"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 12.50"
        android:fontFamily="@font/chalkboard"
        app:layout_constraintTop_toBottomOf="@id/types"
        android:textColor="#676098"
        android:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="455dp"
        android:textStyle="bold"
        android:alpha="0.7"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/t1_gl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="360dp"
        android:elevation="2dp"
        android:alpha="0.2"
        android:id="@+id/disguise"
        />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="395dp"
        android:elevation="2dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/bb"
        android:id="@+id/basket"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="20dp"
        android:id="@+id/bg"
        android:background="@color/white"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: $ 00.00"
        android:fontFamily="@font/chalkboard"
        app:layout_constraintTop_toTopOf="@id/bg"
        app:layout_constraintBottom_toBottomOf="@id/bg"
        android:elevation="21dp"
        android:id="@+id/total"
        android:textColor="#676098"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="30dp"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Card"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/bg"
        app:layout_constraintBottom_toBottomOf="@id/bg"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="20dp"
        android:background="@drawable/rounded_yell"
        android:textColor="@color/white"
        android:layout_marginRight="20dp"
        android:id="@+id/card"
        android:fontFamily="@font/chalkboard"
        />

    





</androidx.constraintlayout.widget.ConstraintLayout>